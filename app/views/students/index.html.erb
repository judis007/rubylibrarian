<center><h1>Students</h1></center>
   
 
<table class="table container table-bordered">
 <thead>
   <tr>
     <th scope="col">Student</th>
     <th scope="col">Address</th>
     <th scope="col" colspan = "4">Actions</th>
   </tr>
 </thead>
 <tbody>
   <% @students.each do |student| %>
    <tr>
      <td><%= student.student %></td>
      <td><%= student.address %></td>
      <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-outline-primary" %></td>
      <td><%= link_to "Delete", student_path(student), method: :delete, class:"btn btn-outline-danger", data: {confirm: "Are you sure?"} %></td>
    </tr>
   <% end %>
  </tbody>
  </table>

 <%= link_to "Add New Student", new_student_path(@students), class: "btn btn-dark" %>
